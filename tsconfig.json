{
    "compilerOptions": {
        "target": "es2022",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    "exclude": ["node_modules"]
}
